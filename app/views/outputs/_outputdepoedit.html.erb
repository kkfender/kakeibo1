<div class="container">
  <div class="wrapper">
    <div class="form-signin"> 
	  <h3 class="form-signin-heading">収入</h3>
      <div class="form-group">
        <%= form_for @outputs, url: "/outputs/#{@outputs.id}",:method => :patch,class:"form-horizontal" do|f|%>
        <% unless @outputs.errors.blank? %>
          <div class="panel-body form-horizontal  alert alert-danger">
            <% @outputs.errors.full_messages.each do |message| %>
              <li><%= message %></li>     
            <% end %>
          </div>
        <% end %>
      
          収入日<span class="label label-danger",>必須項目</span>
          <%= f.date_field :date, value: Time.now.strftime("%Y-%m-%d"),class:"form-control" %><br/>
  
          収入額<span class="label label-danger",>必須項目</span>
          <%= f.number_field :deposit,class:"form-control" %><br/>

          収入項目<span class="label label-danger",>必須項目</span>     
		      <%= f.select :revenue_item, [["給料", "給料"], ["賞与", "賞与"], ["一時金", "一時金"],["副業", "副業"],
		      ["年金", "年金"],["配当金", "配当金"],["その他", "その他"]] ,{},class:"form-control" %>  <br/>
	        
	        メモ<span class="label label-primary",>任意項目</span>	   
          <%= f.text_field :memo,class:"form-control" %><br/><br/>  
          <%= f.submit "記帳",class:"btn btn-primary form-control" %><br/>
		    <% end %>
      </div>
    </div>
  </div>
</div>    
        