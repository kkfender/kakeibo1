<div class="container">
   

      
   <div class="wrapper">
	<div class="form-signin"> 
	 <h3 class="form-signin-heading">支出</h3>

      <% unless @outputs.errors.blank? %>
 <div class="panel-body form-horizontal  alert alert-danger">
 <% @outputs.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </div>
<% end %>
<%= form_for @outputs, url: "/outputs",class:"form-horizontal" do|f|%>
  支出日<span class="label label-danger",>必須項目</span>
  <%= f.date_field :date, value: Time.now.strftime("%Y-%m-%d"),class:"form-control" %><br/>
  
 支出額<span class="label label-danger",>必須項目</span>
  <%= f.number_field :withdrawal,class:"form-control" %><br/>

店名<span class="label label-primary",>任意項目</span>
    <%= f.text_field :shop_name,class:"form-control" %><br/>

支出項目<span class="label label-danger",>必須項目</span>     
		 <%= f.select :category, [["食費", "食費"], ["水道光熱費", "水道光熱費"], 
  ["通信費", "通信費"],
  ["遊興費", "遊興費"], ["交通費", "交通費"], ["美容費", "美容費"], ["医療費", "医療費"],
  ["被服費", "被服費"]  , ["生活雑貨・日用品", "生活雑貨・日用品"], ["教育費", "教育費"], 
  ["交際費", "交際費"], ["住宅費", "住宅費"], ["ペット", "ペット"], ["保険", "保険"], 
  ["社会保険", "社会保険"],  ["税金", "税金"], ["その他費用", "その他費用"]] ,{},class:"form-control" %>  <br/>
	メモ<span class="label label-primary",>任意項目</span>	   
<%= f.text_field :memo,class:"form-control" %><br/><br/>
        
         <%= f.submit "記帳",class:"btn btn-primary form-control" %><br/>
		   
			  
        
          <%end%>
          </div></div>
          </div>
        
        